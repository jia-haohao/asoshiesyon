<div class = "container">
  <div class = "row justify-content-center">
    <div class = "col-8">
      <h1>Log in</h1>
      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

        <% f.label :email %>
        <% f.email_field :email %>

        <% f.label :password %>
        <% f.password_field :password %>

        <%= f.submit "Log in", class: "btn btn-success"%>
      <% end %>
    </div>
  </div>
</div>
