<h2 class = "container">プロフィールを編集する</h2>
<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>件のエラーがあります. </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <%= form.label :image %>
    <%= image_tag(@user.image.url, style: "width: 200px; height: 180px;",class: "user-icon") if @user.image && @user.image.url %>
    <%= form.file_field :image, class: "form-control" %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="container">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  
  <ul class = "menu">
    <li>
      <%= link_to @user, method: :delete, data: { confirm: '本当に削除していいですか' } do %>
        <span class="bi bi-trash"></span>
      <% end %>
    </li>
    <li>
      <%= link_to new_user_path do %>
        <span class="bi bi-skip-backward-btn"></span>
      <% end %>
    </li>
  </ul>

  <div class = "container">
    <%= form.submit %>
  </div>

<% end %>