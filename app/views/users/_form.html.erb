<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %>件のエラーがあります. </h2>
      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "container">
    <div class = "row justify-content-center">
      <div class = "col-8">
        <div class="image_field">
          <%= form.label :image %>
          <%= image_tag(@user.image.url, style: 'width: 200px; height: 180px;', class: "user-icon") if @user.image && @user.image.url %>
        </div>

        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name %>
        </div>

        <div class="field">
          <%= form.label :email %>
          <%= form.email_field :email %>
        </div>

        <div class="field">
          <%= form.label :password %>
          <%= form.password_field :password %>
        </div>

        <div class="field">
          <%= form.label :password_confirmation %>
          <%= form.password_field  :password_confirmation %>
        </div>
        
        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>
